                android:text="9" />

            <!-- Practice 10 -->
            <Button
                android:id="@+id/practice_10"
                android:onClick="@{() -> numberListFragment.practiceNumber(10)}"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_margin"
                android:text="10" />

            <!-- Practice 11 -->
            <Button
                android:id="@+id/practice_11"
                android:onClick="@{() -> numberListFragment.practiceNumber(11)}"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_margin"
                android:text="11" />

            <!-- Practice 6 -->
            <Button
                android:id="@+id/practice_12"
                android:onClick="@{() -> numberListFragment.practiceNumber(12)}"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_margin"
                android:text="12" />
        </LinearLayout>
    </ScrollView>
</layout>